{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Another opinionated boilerplate for building web apps",
  "main": "src/index.js",
  "repository": "https://github.com/albertfdp/boilerplate",
  "author": "Albert Fern√°ndez <albert@nandez.cat>",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack --progress",
    "format:js": "prettier --write {config,src,test}/**/*.js",
    "format": "yarn run format:js",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint {config,src,test}/**/*.js",
    "lint": "yarn run lint:js && yarn run lint:css",
    "precommit": "lint-staged",
    "start": "webpack-dev-server",
    "styleguide": "styleguidist --config config/styleguide.config.js server",
    "test:watch": "jest --watch",
    "test": "jest",
    "travis": "yarn run format && yarn run lint && yarn run test"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "7.1.2",
    "babel-plugin-module-resolver": "3.0.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "0.28.8",
    "eslint": "4.15.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "html-webpack-plugin": "2.30.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.1.1",
    "offline-plugin": "4.9.0",
    "postcss-cssnext": "3.0.2",
    "postcss-import": "11.0.0",
    "postcss-loader": "2.0.10",
    "prettier": "1.10.2",
    "raf": "^3.4.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-styleguidist": "6.1.0",
    "react-svg-loader": "2.1.0",
    "react-test-renderer": "16.2.0",
    "style-loader": "0.19.1",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "unexpected": "10.36.2",
    "unexpected-react": "5.0.1",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/test/stubs/styles.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "\\.*(spec\\.js)$",
    "setupFiles": ["raf/polyfill"]
  },
  "lint-staged": {
    "*.js": ["prettier", "eslint", "git add"],
    "*.css": ["prettier", "stylelint", "git add"]
  }
}
