{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Another opinionated boilerplate for building web apps",
  "main": "src/index.js",
  "repository": "https://github.com/albertfdp/boilerplate",
  "author": "Albert Fern√°ndez <albert@nandez.cat>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server",
    "styleguide": "styleguidist --config config/styleguide.config.js server",
    "build": "NODE_ENV=production webpack --progress",
    "format": "yarn run format:js",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint {config,src,test}/**/*.js",
    "format:js": "prettier --single-quote --write {config,src,test}/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "travis": "yarn run format && yarn run lint && yarn run test"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.2",
    "babel-plugin-module-resolver": "2.7.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.7",
    "eslint": "3.19.0",
    "eslint-config-pretty-standard": "0.2.2",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "2.30.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "^20.0.1",
    "offline-plugin": "4.8.4",
    "postcss-cssnext": "2.9.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "2.0.8",
    "prettier": "1.8.2",
    "react": "15.5.4",
    "react-addons-test-utils": "15.6.2",
    "react-dom": "15.5.4",
    "react-styleguidist": "^5.2.1",
    "react-svg-loader": "1.1.1",
    "react-test-renderer": "15.5.4",
    "style-loader": "0.19.0",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "unexpected": "10.36.1",
    "unexpected-react": "3.5.2",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/test/stubs/styles.js",
      "react-addons-test-utils": "react-dom/test-utils"
    },
    "testRegex": "\\.*(spec\\.js)$"
  }
}
